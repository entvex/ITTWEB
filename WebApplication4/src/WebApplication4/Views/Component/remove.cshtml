@model WebApplication4.ViewModels.ComponentViewModel

@{
    ViewBag.Title = "fjern Komponent";
}
<div class="row">
    <h2>Fjern Komponent</h2>
    <div class="row">
        <form asp-controller="Component" asp-action="Remove" method="post" class="form-horizontal" role="form">
            <div class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-5 col-md-12">
                            <label>Kompoent</label> <br />
                            <select asp-for="SelectedComponentId" asp-items="@Model.ComponentsSelectListItems" class="dropdown">
                                <option>Please select one</option>
                            </select>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-12">
                            <input type="submit" value="Fjern" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>