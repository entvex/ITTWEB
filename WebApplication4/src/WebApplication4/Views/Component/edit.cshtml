@model WebApplication4.ViewModels.ComponentViewModel

@{
    ViewBag.Title = "komponent";
}

<h2>Ændre komponentkategori</h2>

<div class="row">
    <form asp-controller="Component" asp-action="Edit" method="post" class="form-horizontal">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4 center-block">
                    <div class="form-group">
                        <label>Select komponent til ændring</label>
                        <br />
                        <select asp-for="SelectedComponentId" asp-items="@Model.ComponentsSelectListItems" class="form-control">
                            <option>Please select one</option>
                        </select>
                        <br />
                        <label>Status:</label>
                        <select asp-for="SelectedStatus" asp-items="@Model.Status" class="form-control">
                            <option>Please select one</option>
                        </select>
                        <br />
                        <label>SerialNo:</label>
                        <input asp-for="SerialNo" class="form-control" />
                        <br />
                        <label>Admin kommentar:</label>
                        <input asp-for="AdminComment" class="form-control" />
                        <br />
                        <label>KompoentType</label> <br />
                        <select asp-for="SelectedComponentTypeId" asp-items="@Model.ComponentTypeSelectListItems" class="dropdown">
                            <option>Please select one</option>
                        </select>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Ændre komponent" class="btn btn-default" />
                    </div>
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
    </form>
</div>